
@{
    ViewBag.Title = "Home Page";
}
@model List<BlogMVC.Models.Post>


<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-6">
            <h2 class="title">@Html.Raw(post.Title)</h2>
            <div class="about">
                Posted By @if(post.Author != null)
                {
                    <i>@post.Author</i> <br />
                }else
                {
                    <i>Anonymous</i> <br />
                }
                on @post.Date
            </div>
            <div>
                @Html.Raw(post.Body)
            </div>
        </article>
    }
</section>